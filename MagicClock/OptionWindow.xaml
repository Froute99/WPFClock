<Window x:Class="MagicClock.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicClock"
        mc:Ignorable="d"
        Title="OptionWindow" Width="300" Height="250" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="X" Margin="0,10,0,1" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="InputBox_X" TextAlignment="Center"/>
        <Label Content="Y" Margin="0,10,0,1" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="InputBox_Y" TextAlignment="Center"/>

        <Button x:Name="OKButton" Width="50" Margin="20" Content="Yes" Background="{x:Null}" Click="OnOKButtonClicked"/>

        <!--<Label Content="모니터" Margin="0,10,0,1" HorizontalAlignment="Center" FontSize="18"/>
        <ComboBox ItemsSource ="{Binding MonitorList}" Height="25" Name="monitorComboBox"  SelectionChanged="OnMonitorSelected"/>-->
    </StackPanel>
</Window>
